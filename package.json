{
  "name": "graphql-centrifugo-subscriptions",
  "version": "1.5.0",
  "description": "A graphql-subscriptions PubSub Engine using centrifugo",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/davidyaha/graphql-centrifugo-subscriptions.git"
  },
  "keywords": [
    "graphql",
    "centrifugo",
    "apollo",
    "subscriptions"
  ],
  "author": "David Yahalomi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidyaha/graphql-centrifugo-subscriptions/issues"
  },
  "homepage": "https://github.com/davidyaha/graphql-centrifugo-subscriptions",
  "scripts": {
    "compile": "tsc",
    "pretest": "npm run compile",
    "test": "npm run testonly -- && npm run integration --",
    "posttest": "npm run lint",
    "lint": "tslint --project ./tsconfig.json ./src/**/*.ts",
    "watch": "tsc -w",
    "testonly": "mocha --reporter spec --full-trace ./dist/test/tests.js ",
    "integration": "npm run compile && mocha --reporter spec --full-trace ./dist/test/integration-tests.js ",
    "benchmark": "npm run compile && mocha --reporter spec --full-trace ./dist/test/benchmark.js ",
    "coverage": "node ./node_modules/istanbul/lib/cli.js cover _mocha -- --full-trace ./dist/test/tests.js",
    "postcoverage": "remap-istanbul --input coverage/coverage.raw.json --type lcovonly --output coverage/lcov.info",
    "prepublishOnly": "npm run test"
  },
  "dependencies": {
    "graphql-subscriptions": "^0.5.6",
    "iterall": "^1.1.3"
  },
  "devDependencies": {
    "@types/chai": "^4.0.10",
    "@types/chai-as-promised": "0.0.31",
    "@types/mocha": "^2.2.44",
    "@types/node": "7.0.19",
    "@types/simple-mock": "0.0.27",
    "chai": "^3.5.0",
    "chai-as-promised": "^7.1.1",
    "graphql": "^0.12.0",
    "istanbul": "1.0.0-alpha.2",
    "mocha": "^3.5.3",
    "remap-istanbul": "^0.9.5",
    "simple-mock": "^0.8.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "optionalDependencies": {
  },
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  }
}
